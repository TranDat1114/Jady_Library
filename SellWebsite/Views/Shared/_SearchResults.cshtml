@model IEnumerable<Product>

@if (Model != null && Model.Any())
{ @foreach (var product in Model)
    {
        <li class="dropdown-item">
            <div class="nav-link">
                <div class="row ">
                    <div class="col-6">
                        <img class="w-100" style="height:100px; object-fit:cover" src="@product.Image" alt="search img" />
                    </div>
                    <div class="col-6">
                        <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Detail"
                            asp-route-id="@product?.ProductId">
                            <div class="row ">
                                <div class="col-12">
                                    <p class="text-truncate"><strong>@product.Title</strong></p>
                                </div>
                                <div class="col-12">
                                    
                                </div>

                            </div>
                        </a>
                    </div>
                </div>
                <div class="row">
                   @* <div class="col-12">
                        <a class="btn btn-outline-dark w-100" asp-action="AddToCart" asp-controller="Home" asp-area="Customer" asp-route-id="@product?.Id">
                            Add to cart
                        </a>
                    </div>*@
                </div>
            </div>
        </li>
        <li>
            <div class="dropdown-divider"></div>
        </li>
    }
}
else
{
    <li>
        <div class="dropdown-item" style="height:100px;">No results found.</div>
    </li>
}