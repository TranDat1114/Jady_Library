@using System.Globalization;
@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}
@*
<!-- Header -->
<header id="header" class="header">

</header> <!-- end of header -->
<!-- end of header -->
<!-- Projects -->*@
<div id="projects" class="filter bg-gray">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="h2-heading">Jady Library</h2>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Filter -->
                <div class="button-group filters-button-group row-cols-3 row-cols-lg-5">
                    <button class="button is-checked" data-filter="*">ALL</button>
                    @foreach (var item in Model?.Categories!)
                    {
                        <button class="button" data-filter=".@item.Name">@item.Name</button>
                    }
                </div> <!-- end of button group -->
                <div class="row row-cols-1 row-cols-lg-5 row-cols-md-2 justify-content-center align-items-center">
                    @foreach (var item in Model?.Products!)
                    {
                        <div class="element-item col @(string.Join(" ",item?.Categories?.Select(p=>p.Name)!))">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Detail" asp-route-id="@item?.ProductId">
                                <img style="height:400px; object-fit:cover" class="w-100" src="@item?.Image" alt="alternative">
                                <div class="d-flex justify-content-between">
                                    <p><strong>@item?.Title</strong>
                                </div>
                            </a>

                            <div class="d-flex justify-content-evenly">
                                <a class="btn btn-primary btn-sm" asp-area="Customer" asp-controller="Preview" asp-action="Index" asp-route-id="@item?.ProductId">Live Preview</a>
                                <a class="btn btn-primary btn-sm" asp-area="Customer" asp-controller="Home" asp-action="AddToCart" asp-route-productId="@item?.ProductId">Add to cart</a>
                            </div>
                        </div>
                    }
                </div> <!-- end of grid -->
                <!-- end of filter -->

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of filter -->
<!-- end of projects -->
<!-- Invitation -->
<div class="container">
    <div class="row align-items-center">

        <div class="col-lg-12">
            <div class="image-container">
                <lottie-player class="w-100" src="https://assets1.lottiefiles.com/packages/lf20_aesgckiv.json" background="transparent" speed="1" loop autoplay></lottie-player>
                @*<img  src="~/assets/Images/TemplateIMG/header-illustration.svg" alt="alternative">*@
            </div> <!-- end of image-container -->
        </div> <!-- end of col -->
    </div> <!-- end of row -->
</div> <!-- end of container -->