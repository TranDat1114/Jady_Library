@model CategoryVM

<div class="container">

    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">

            <div class="row pb-2">
                <h2 class="text-primary">@(Model.Category.CategoryId != 0 ? "Update" : "Create") Category</h2>
            </div>
            <div asp-validation-summary="All"></div>

            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    <label asp-for="Category.CategoryId"></label>
                    <input style="width:150px" class="form-control" readonly asp-for="Category.CategoryId" />
                </div>
               
            </div>

            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    <label asp-for="Category.Name"></label>
                    <input class="form-control" type="text" asp-for="Category.Name" placeholder="Input Category Name" />
                    <span class="text-danger" asp-validation-for="Category.Name"></span>
                </div>
                
            </div>
          
            <div class="mb-3 row">
                <label asp-for="Category.Description"></label>
                <textarea class="form-control" rows="6" asp-for="Category.Description" placeholder="Input Category Description...">

            </textarea>
                <span class="text-danger" asp-validation-for="Category.Description"></span>
            </div>
                      
            <div class="row">
                <div class="col-6 col-md-3">
                    @if (Model.Category.CategoryId != 0)
                    {
                        <button class="btn btn-primary form-control" type="submit">Update</button>
                    }
                    else
                    {
                        <button class="btn btn-primary form-control" type="submit">Create</button>
                    }
                </div>
                <div class="col-6 col-md-3">
                    <a class="btn btn-outline-secondary border form-control" asp-controller="Category" asp-action="Index">Back to list</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists  table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/updateImageAfterInput.js"></script>
}