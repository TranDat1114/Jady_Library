@model List<OrderHeader>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="text-primary">
                Borrow List
            </h2>
        </div>
        <div class="col-12 col-md-6 text-end">
            @* <a class="btn btn-primary" asp-controller="Order" asp-action="Upsert">
            <i class="bi bi-plus-circle"></i> Create new category
            </a>*@
        </div>
    </div>
</div>
<div class="mt-5 container-fluid">
    <div>
        <table id="tblData" class="table table-striped scroll-table w-100">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th class="text-nowrap">
                        Name
                    </th>
                    <th class="text-nowrap">
                        Email
                    </th>
                    <th class="text-nowrap">
                        Phone Number
                    </th>
                    <th class="text-nowrap">
                        Borrow Status
                    </th>
                    <th class="text-nowrap">
                        Borrow Time
                    </th>
                    <th class="text-nowrap">
                        Return Time Expected
                    </th>
                    <th class="text-nowrap">
                        Details
                    </th>
                    <th class="text-nowrap">
                        Approve
                    </th>
                    <th class="text-nowrap">
                        Rejected
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.OrderHeaderId
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.OrderStatus
                        </td>
                        <td>
                            @item.OrderTime
                        </td>
                        <td>
                            @item.ReturnTime
                        </td>
                        <td>
                            <a href='/admin/order/Details?idOrder=@item.OrderHeaderId' class="btn btn-primary text-nowrap w-100"><i class="bi bi-pencil-square"></i> Details</a>
                        </td>
                        @{
                            if (item.OrderStatus != SD.StatusReturned)
                            {
                                <td>

                                    <a onClick=Approve('/admin/order/ApproveOderStatus?idOrder =@item.OrderHeaderId') class="btn btn-primary text-nowrap w-100"><i class="bi bi-pencil-square"></i> Approve</a>
                                </td>
                                <td>
                                    <a onClick=Rejected('/admin/order/RejectedOderStatus?idOrder =@item.OrderHeaderId') class="btn btn-primary text-nowrap w-100"><i class="bi bi-pencil-square"></i> Reject</a>
                                </td>
                            }
                            else
                            {
                                <td></td>
                                <td>
                                    <a onClick=Approve('/admin/order/ReturnedOderStatus?idOrder =@item.OrderHeaderId') class="btn btn-primary text-nowrap w-100"><i class="bi bi-pencil-square"></i> Returned</a>
                                </td>
                            }
                        }

                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>




@section Scripts{
    @*    <script src="~/js/orderProduct.js"></script>*@
    <script src="~/js/orderStatusUpdate.js"></script>
}